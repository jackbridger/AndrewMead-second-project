type User {
  id: ID! @id
  name: String!
  email: String! @unique
  posts: [User]!
  comments: [Comment]!
}

type Post {
  id: ID! @id
  title: String!
  body: String!
  published: Boolean!
  author: User!
  comments: [Post]!
}
type Comment {
  id: ID! @id
  text: String!
  author: User!
  post: Post!
}